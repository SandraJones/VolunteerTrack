    <div class="mapPlacement">
        <style>
            #map {
                width: 60%;
                height: 400px;
                background-color: grey;
            }
        </style>
    </div>
    <script>
        function initMap() {
            var uluru = { lat: 36.138, lng: -86.754 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 10,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCyYRivEIIvOGn2A8QyOlrdUE9js8PGOwY&callback=initMap">
    </script>