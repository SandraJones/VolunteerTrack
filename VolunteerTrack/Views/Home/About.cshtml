@{
    ViewData["Title"] = "Track each activity here";
}
<h2>@ViewData["Title"].</h2>


<div>
    <div class="options" ng-controller="ActivitiesController">
        <form ng-submit="saveActivity()" name="form.InputActivity">
            <fieldset>
                <p>
                    <label>Name of Organization Where You Volunteered</label>
                    <input type="text" ng-model="Activity.OrgName" class="field" required pat`tern="[a-zA-Z0-9]+" />
                </p>
                <p>
                    <label>Number of Hours You Volunteered</label>
                    <input type="text" ng-model="Activity.NumberHours" class="field" required pattern="[a-zA-Z0-9]+" />
                </p>
                <p>
                    <label>Number of Miles Driven Round Trip</label>
                    <input type="text" ng-model="Activity.Mileage" class="field" required pattern="[a-zA-Z0-9]+" />
                </p>
                <p>
                    <label>DollarsContributed</label>
                    <input type="text" ng-model="Activity.DollarsContributed" class="field" required pattern="[a-zA-Z0-9]+" />
                </p>
                <p>
                    <label>Date</label>
                    <input type="datetime-local" ng-model="Activity.Date" class="field" required />
                </p>
                <button type="submit" ng-click="saveActivity()">SUBMIT</button>
                <br/>
                <br/>
                <br/>
                <p><label>Total hours volunteered this year:</label></p>
                <p><label>Total mileage for the year:</label></p>
                <p><label>Total monetary contributions for the year:</label></p>
            </fieldset>
        </form>
    </div>
</div>